@model IEnumerable<PublicApi.DTO.v1.Game>

@{
    ViewData["Title"] = @Resources.PublicApi.DTO.v1.GameEvent.Game;
}

<h1>@Resources.PublicApi.DTO.v1.GameEvent.Game</h1>

<p>
    <a asp-action="Create">@Resources.Common.Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stadium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatchRound)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Stadium!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchRound)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Resources.Common.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Resources.Common.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Resources.Common.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
