@model WebApp.ViewModels.Game.GameCreateEditViewModel

<div class="form-group">
    <label asp-for="Game.Stadium" class="control-label"></label>
    <select asp-for="Game.StadiumId" class="form-control" asp-items="Model.StadiumSelectList"></select>
    <span asp-validation-for="Game.StadiumId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Game.GameLength" class="control-label"></label>
    <input asp-for="Game.GameLength" class="form-control" />
    <span asp-validation-for="Game.GameLength" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Game.MatchRound" class="control-label"></label>
    <input asp-for="Game.MatchRound" class="form-control" />
    <span asp-validation-for="Game.MatchRound" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">HomeTeam</label>
    <select asp-for="HomeTeamId" class="form-control" asp-items="Model.HomeTeamSelectList"></select>
    <span asp-validation-for="HomeTeamId" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">AwayTeam</label>
    <select asp-for="AwayTeamId" class="form-control" asp-items="Model.AwayTeamSelectList"></select>
    <span asp-validation-for="AwayTeamId" class="text-danger"></span>
</div>
