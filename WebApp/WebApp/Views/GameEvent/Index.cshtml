@model IEnumerable<PublicApi.DTO.v1.GameEvent>

@{
    ViewData["Title"] = @Resources.PublicApi.DTO.v1.EventType.GameEvent;
}

<h1>@Resources.PublicApi.DTO.v1.EventType.GameEvent</h1>

<p>
    <a asp-action="Create">@Resources.Common.Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.GameTeamList)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GamePart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberInOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Game!.Id)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item!.GameTeamList!.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GamePart!.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventType!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberInOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Resources.Common.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Resources.Common.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Resources.Common.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
