@model WebApp.ViewModels.GameEvent.GameEventCreateEditViewModel

<div class="form-group">
    <label asp-for="GameEvent.EventType!.Name" class="control-label"></label>
    <select asp-for="GameEvent.EventTypeId" class="form-control" asp-items="Model.EventTypeSelectList"></select>
    <span asp-validation-for="GameEvent.EventTypeId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="GameEvent.GameTeamList!.TeamPerson!.Person!.FullName" class="control-label"></label>
    <select asp-for="GameEvent.GameTeamListId" class="form-control" asp-items="Model.GameTeamListSelectList"></select>
    <span asp-validation-for="GameEvent.GameTeamList!.Id" class="text-danger"></span>
</div>
<input hidden asp-for="AwayTeamId">
<input hidden asp-for="HomeTeamId">
<input hidden asp-for="GameId">
<div class="form-group">
    <label asp-for="GameEvent.GameTime" class="control-label"></label>
    <input asp-for="GameEvent.GameTime" class="form-control"/>
    <span asp-validation-for="GameEvent.GameTime" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="GameEvent.NumberInOrder" class="control-label"></label>
    <input asp-for="GameEvent.NumberInOrder" class="form-control"/>
    <span asp-validation-for="GameEvent.NumberInOrder" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="GameEvent.Description" class="control-label"></label>
    <input asp-for="GameEvent.Description" class="form-control"/>
    <span asp-validation-for="GameEvent.Description" class="text-danger"></span>
</div>