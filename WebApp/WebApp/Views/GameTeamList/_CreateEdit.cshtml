@model WebApp.ViewModels.GameTeamList.GameTeamListCreateEditViewModel

<div class="form-group">
    <label asp-for="GameTeamList.PersonId" class="control-label"></label>
    <select asp-for="GameTeamList.PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
    <span asp-validation-for="GameTeamList.PersonId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="GameTeamList.GameTeamId" class="control-label"></label>
    <select asp-for="GameTeamList.GameTeamId" class="form-control" asp-items="ViewBag.GameTeamId"></select>
    <span asp-validation-for="GameTeamList.GameTeamId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="GameTeamList.RoleId" class="control-label"></label>
    <select asp-for="GameTeamList.RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
    <span asp-validation-for="GameTeamList.RoleId" class="text-danger"></span>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="GameTeamList.InStartingLineup" /> @Html.DisplayNameFor(model => model.GameTeamList.InStartingLineup)
    </label>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="GameTeamList.Staff" /> @Html.DisplayNameFor(model => model.GameTeamList.Staff)
    </label>
</div>