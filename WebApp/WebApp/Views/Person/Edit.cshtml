@model WebApp.ViewModels.Person.PersonCreateEditViewModel

@{
    ViewData["Title"] =@Resources.Common.Edit;
}

<h1>@Resources.Common.Edit</h1>

<h4>@Resources.PublicApi.DTO.v1.GamePersonnel.Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Person.Id" />
            <div class="form-group">
                <input type="submit" value="@Resources.Common.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
