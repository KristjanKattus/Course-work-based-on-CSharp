@model WebApp.ViewModels.StadiumArea.StadiumAreaCreateEditViewModel

@{
    ViewData["Title"] = @Resources.Common.Create;
}

<h1>@Resources.Common.Create</h1>

<h4>@Resources.PublicApi.DTO.v1.Stadium.StadiumArea</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <partial name="_CreateEdit" model="Model"/>
            
            <div class="form-group">
                <input type="submit" value="@Resources.Common.Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
